{
  "name": "boraAjudar.work-api",
  "version": "1.0.0",
  "description": "boraAjudar.work-api",
  "main": "./build/server.js",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0",
    "vscode": "^1.22.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node ./build/server.js",
    "dev": "docker-compose up -d db-dev && nodemon && docker-compose stop db-dev",
    "test": "NODE_ENV=test tap --before=src/config/test/setup.mjs --after=src/config/test/teardown.mjs --no-check-coverage",
    "test:watch": "node src/config/test/setup.mjs && NODE_ENV=test tap --color --watch --no-check-coverage --no-coverage-report --comments --changed --reporter=spec && docker-compose stop db-test",
    "test:reset:db": "DATABASE_URL=$DATABASE_URL prisma migrate reset --force",
    "dev:stop": "docker-compose down",
    "postinstall": "npm run build"
  },
  "author": "Thalles Freitas",
  "license": "ISC",
  "dependencies": {
    "@fastify/bearer-auth": "^9.0.0",
