    "@types/nodemailer": "^6.4.5",
    "@types/q": "^1.5.6",
    "@types/qs": "^6.9.8",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "docker-compose": "^0.23.17",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
