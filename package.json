    "@sendgrid/mail": "^7.7.0",
    "@wppconnect-team/wppconnect": "^1.28.0",
    "aws-sdk": "^2.1219.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.19.2",
    "fastify-file-upload": "^4.0.0",
    "fastify-plugin": "^4.0.0",
    "fastify-socket.io": "^4.0.0",
    "fastify-stripe": "^2.4.1",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-auto-content": "^3.1.0",
    "fs": "^0.0.1-security",
    "handbrake-js": "^7.0.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "mailersend": "^2.0.5",
    "mercadopago": "^1.5.17",
    "nodemailer": "^6.7.8",
    "openai": "^4.0.0",
